<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:width="2dp" android:color="@color/LightRed" />
            <corners android:bottomRightRadius="10dp" android:topRightRadius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:width="2dp" android:color="@color/LightGray" />
            <corners android:bottomRightRadius="10dp" android:topRightRadius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:width="2dp" android:color="@color/White" />
            <corners android:bottomRightRadius="10dp" android:topRightRadius="10dp" />
        </shape>
    </item>
</selector>